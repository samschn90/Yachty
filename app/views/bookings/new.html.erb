<div class="container">
  <p>You are about to book the yacht: <%= @yacht.name %></p>
    <%= simple_form_for [@yacht, @booking] do |f| %>
    <div data-controller="price-calculator" data-price-calculator-price-value = "<%= @yacht.price %>" >
      <%= f.input :start_time, as: :date, html5: true, order: [:month, :year], input_html: { value: Date.today, min: Date.today, data: { price_calculator_target: "start" } } %>
      <%= f.input :end_time, as: :date, html5: true, order: [:month, :year], input_html: { value: Date.today + 1, min: Date.today + 1, data: { price_calculator_target: "end", action: "change->price-calculator#calculatePrice" } } %>
      <%= f.input :total_price, input_html: { value: 0, disabled: true, data: { price_calculator_target: "total" } } %>
      <%= f.submit :submit %>
    </div>
    <% end %>
</div>
