<%= simple_form_for @yacht do |f| %>
  <%= f.input :title %>
  <%= f.input :name %>
  <%= f.input :length %>
  <%= f.input :category, :collection => ["1 - Sailyacht", "2 - Motoryacht", "3 - Hybridyacht", "4 - Flyingyacht"] %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
