<h2><%= @yacht.title %></h2>
<h2><%= @yacht.name %></h2>
<p><%= @yacht.description %></p>
<p><%= @yacht.category %></p>
<p><%= @yacht.length %> m</p>
<p><%= @yacht.price %></p>

<%= cl_image_tag @yacht.photo.key, height: 300, width: 400, crop: :fill %>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
